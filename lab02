import os, zipfile

files = {
"lab02_ex1.cpp": "content1",
"lab02_ex2.cpp": "content2",
# ...all the code from my previous message goes here...
}

os.makedirs("lab02", exist_ok=True)
for n, c in files.items():
    open(os.path.join("lab02", n), "w", encoding="utf-8").write(c)

with zipfile.ZipFile("lab02.zip", "w", zipfile.ZIP_DEFLATED) as z:
    for n in files:
        z.write(os.path.join("lab02", n), arcname=n)

print("✅ lab02.zip created successfully – check /storage/emulated/0/Pydroid3/")
